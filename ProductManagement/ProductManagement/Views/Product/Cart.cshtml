@model List<ProductManagement.Models.ProductDTO>
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_OuterLayout.cshtml";
}
@{
    double total = 0;
}
<h2>Cart</h2>
<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Qty</th>
        <th>Price</th>
    </tr>
    @foreach (var item in Model) {
        total += item.Price * item.Qty;
        <tr>
            <td>@item.Name</td>
            <td>@item.Qty</td>
            <td>@item.Price</td>
        </tr>
    }
    <tr>
        <th colspan="2" class="text-right">Total</th>
        <th>@total</th>
    </tr>
    <tr>
        <td colspan="2"></td>
        <td ><h2><a href="/Product/Checkout" class="btn btn-danger">Check Out</a></h2></td>
    </tr>
</table>

