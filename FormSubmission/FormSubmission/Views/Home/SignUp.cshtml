
@{
    ViewBag.Title = "SignUp";
}

@{
    bool CheckGender(string gn) {
        if(Model != null && Model.Gender !=null && Model.Gender.Equals(gn))
        {
            return true;
        }
        return false;
    }

    bool CheckProfession(string prof) {
        if (Model != null && Model.Profession != null && Model.Profession.Equals(prof))
        {
            return true;
        }
        return false;
    }

    bool CheckHobbies(string hob)
    {
        if (Model != null && Model.Hobbies != null) {
            foreach (var h in Model.Hobbies) {
                if (h.Equals(hob)) return true;
            }
        }
        return false;
    }

}



<h2>SignUp</h2>
@*@Html.ValidationSummary()*@
<form method="post">
    <input type="text" name="Name" class="form-control" value="@(Model != null ? Model.Name :"" )" placeholder="Name" />
    <span class="text-danger">@Html.ValidationMessage("Name")</span>
    <input type="text" name="Username" value="@(Model != null ? Model.Username : "" )" class="form-control" placeholder="Username" />
    @Html.ValidationMessage("Username")
    <br>Gender: <input type="radio" checked="@CheckGender("Male")"  name="Gender" value="Male" /> Male
    <input type="radio" name="Gender" checked="@CheckGender("Female")" value="Female" /> Female </br>
    @Html.ValidationMessage("Gender")
    <br />Profession:
    <select class="form-control" name="Profession">
        <option disabled selected>---Select---</option>
        <option selected="@CheckProfession("Teacher")">Teacher</option>
        <option selected="@CheckProfession("Student")">Student</option>
        <option selected="@CheckProfession("Business")">Business</option>
    </select>
    @Html.ValidationMessage("Profession")
    <br />Hobbies: 
    <input type="checkbox" checked="@CheckHobbies("Music")" name="Hobbies[]"  value="Music" />Music
    <input type="checkbox" checked="@CheckHobbies("Sports")" name="Hobbies[]" value="Sports" />Sports
    <input type="checkbox" checked="@CheckHobbies("Travelling")" name="Hobbies[]" value="Travelling" />Travelling
    <input type="checkbox" checked="@CheckHobbies("Gaming")" name="Hobbies[]" value="Gaming" />Gaming <br />
    <br />
    @Html.ValidationMessage("Hobbies")
    <br />
    Dob: <input type="date" name="Dob" value="@(Model != null ? Model.Dob.Date.ToString("yyyy-MM-dd") : "")"/>
    <br />
    @Html.ValidationMessage("Dob")
    <input type="submit" class="btn btn-success" />
</form>

